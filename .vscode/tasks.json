{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "g++_build",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "${fileDirname}\\*.cpp",
                "-o",
                "${fileDirname}\\test.exe"
            ],
            "options": {
                "cwd": "C:\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOrder": "sequence",
            "dependsOn": [
                 "clean_old_build"
             ]
        },
        {
            "type": "cppbuild",
            "label": "cl.exe_build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\test.exe",
                "*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger.",
            "dependsOrder": "sequence",
            "dependsOn": [
                 "clean_old_build"
             ]
        },
        {
            "type": "shell",
            "label": "clean_old_build",
            "command": "del",
            "args": [
                "*.exe *.obj *.ilk *.pdb"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "none",
            "detail": "Clean up old build files"
        }
    ],
    "version": "2.0.0"
}